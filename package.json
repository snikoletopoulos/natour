{
  "name": "natour",
  "version": "1.0.0",
  "author": "Stavros Nikoletopoulos",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass -w sass/main.scss css/main.css",
    "build": "node-sass sass/main.scss css/main.css",
    "format": "prettier --write .",
    "lint": "stylelint ./sass",
    "dev": "concurrently --kill-others -n sass,server \"npm run watch:sass\" \"npm run serve\"",
    "serve": "live-server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "node-sass": "^7.0.1",
    "stylelint": "^16.3.1"
  }
}
